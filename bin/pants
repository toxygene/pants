#!@php_bin@
<?php
use Pants\Runner,
    Zend\Loader\StandardAutoloader;

require_once "Zend/Loader/StandardAutoloader.php";

$autoloader = new StandardAutoloader();
$autoloader->registerNamespace("Pants")
           ->register();

$cli = new Runner();

try {
    $cli->run($_SERVER['argv']);
} catch (Exception $e) {
    echo $e->getMessage() . PHP_EOL;
    exit(255);
}
