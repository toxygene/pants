                        <file name="PhpScript.php" role="php" />
                        <file name="Property.php" role="php" />
                        <file name="Touch.php" role="php" />
                    </dir>
                    <file name="Autoloader.php" role="php" />
                    <file name="Cli.php" role="php" />
                    <file name="Project.php" role="php" />
                    <file name="Properties.php" role="php" />
                    <file name="Target.php" role="php" />
                    <file name="Targets.php" role="php" />
                    <file name="Task.php" role="php" />
                    <file name="Tasks.php" role="php" />
                </dir>
            </dir>
            <dir name="tests">
                <dir name="Pants">
                    <dir name="Task">
                        <file name="CallTest.php" role="test" />
                        <file name="ChgrpTest.php" role="test" />
                        <file name="ChmodTest.php" role="test" />
                        <file name="ChownTest.php" role="test" />
                        <file name="CopyTest.php" role="test" />
                        <file name="DeleteTest.php" role="test" />
                        <file name="ExecuteTest.php" role="test" />
                        <file name="MoveTest.php" role="test" />
                        <file name="OutputTest.php" role="test" />
                        <file name="PhpScriptTest.php" role="test" />
                        <file name="PropertyTest.php" role="test" />
                        <file name="TouchTest.php" role="test" />
                    </dir>
                    <file name="ProjectTest.php" role="test" />
                    <file name="PropertiesTest.php" role="test" />
                    <file name="TargetsTest.php" role="test" />
                    <file name="TargetTest.php" role="test" />
                </dir>
                <file name="bootstrap.php" role="test" />
                <file name="phpunit.xml" role="test" />
            </dir>
            <file name="README" role="doc" />
        </dir>
    </contents>
    <dependencies>
        <required>
            <php>
                <min>5.3.0</min>
            </php>
            <pearinstaller>
                <min>1.4.8</min>
            </pearinstaller>
            <package>
                <name>Pile</name>
