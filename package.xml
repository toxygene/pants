    <contents>
        <dir name="/">
            <dir name="bin">
                <file name="pants" role="script">
                    <tasks:replace from="@php_dir@" to="php_dir" type="pear-config" />
                    <tasks:replace from="@php_bin@" to="php_bin" type="pear-config" />
                </file>
            </dir>
            <dir name="library">
                <dir name="Pants">
                    <dir name="Properties">
                        <file name="PropertyNameCycleException.php" role="php" />
                    </dir>
                    <dir name="Task">
                        <file name="AbstractFileSystemTask.php" role="php" />
                        <file name="AbstractTask.php" role="php" />
                        <file name="Call.php" role="php" />
                        <file name="Chgrp.php" role="php" />
